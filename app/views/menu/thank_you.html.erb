<h1>Thank you for your order!</h1>
<br>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <ul class="list-group text-left">
      <li class="list-group-item">
        <span>Email: </span>
        <span><%= session[:address]["email"] %></span>
      </li>
      <li class="list-group-item">
        <span>Phone: </span>
        <span><%= session['address']['phone'] %></span>
      </li>
      <li class="list-group-item">
        <span>Address: </span>
        <span><%= session[:address]["address"] %></span>
      </li>
    </ul>
  </div>
</div>

<div class="row" style="margin-top: 10px">
  <div class="col-md-8 col-md-offset-2">
    <ul class="list-group text-left">
      <% session[:purchase].each do |mi| %>
        <li class="list-group-item">
          <span><%= mi['name'] %></span>
          <span style="float: right"><%= mi['price'] %> VND</span>
        </li>
      <% end %>
    </ul>
    <div class="text-right" style="margin-top: 10px; color: red; font-weight: bold; padding-right: 20px">
      <p><span>Shipping:</span> <%= @shipping %> VND</p>
      <p><span>Total:</span> <%= @total %> VND</p>
    </div>
  </div>

</div>