<div class="row">
  <div class="col-md-6">
    <img src="<%= @item.image_url %>" style="width: 486px; height: 400px;"alt="food">
  </div>
  <div class="col-md-4" class="text-left">
    <h2><%= @item.name %></h2>
    <p><%= @item.description %></p>
    <p>
      <%= form_tag add_path, method: "post" do %>
        <input type="hidden" name="id" value="<%= @item.id %>">
        <span class="price"><%= vnd(@item.price) %></span> - 
        <button type="submit" class="btn btn-danger">Order</button>
      <% end %>
    </p>
  </div>
    
</div>