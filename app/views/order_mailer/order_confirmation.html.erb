<h2>Thank you for your order</h2>
<p>
  You have successfully order following items from Galaxy Restaurant.
</p>

<table cellpadding="0" style="width:100%;border-collapse:collapse"> 
 <tbody>
  <tr> 
   <td style="vertical-align:top;">
    <h3 style="border-bottom:1px solid rgb(204,204,204);margin:0 0 3px 0;padding:0 0 3px 0;">Order Details</h3></td> 
  </tr> 
  <tr> 
   <td style="padding:16px 20px 6px 20px;vertical-align:top;"> 
    
    <table cellpadding="0" style="width:100%;border-collapse:collapse"> 
     <tbody>
      
      <% @order['items'].each do |item| %>
      
      <tr> 
       <td style="width:150px;text-align:center;padding:0 0 30px 0;vertical-align:top;"><a href="#" target="_blank"></a><img height="115" src="<%= item['image_url'] %>" class="CToWUd"></td>
       <td style="color:rgb(102,102,102);padding:10px 10px 30px 10px;vertical-align:top;"> 
        <ul style="margin:0;padding:0"> 
         <li style="list-style-type:none;line-height:14px;padding:0 0 4px 0;margin:0"> <a href="" style="font-size:14px;text-decoration:none;color:rgb(0,102,153);line-height:18px;font-family:Arial,sans-serif" target="_blank"><%= item['name'] %> </a> </li> 
        </ul>
       </td> 
       <td style="width:80px;text-align:right;font-size:14px;padding:10px 0 30px 0;vertical-align:top;line-height:18px;font-family:Arial,sans-serif"><strong><%= vnd(item['price']) %></strong></td> 
      </tr> 
      <tr> 
       <td colspan="3" style="border-top:1px solid rgb(234,234,234);padding:0 0 16px 0;vertical-align:top;"></td> 
      </tr> 

      <% end %>

     </tbody>
    </table> 


    <table style="width:100%;border-collapse:collapse"> 
     <tbody>
      <tr> 
       <td style="text-align:right;line-height:18px;padding:0 0 10px 10px;vertical-align:top;font-size:13px;font-family:Arial,sans-serif">Shipping:</td> 
       <td style="width:70px;text-align:right;line-height:18px;padding:0 0 10px 10px;vertical-align:top;font-size:13px;font-family:Arial,sans-serif"><%= vnd(@order['shipping']) %></td> 
      </tr> 
      <tr> 
       <td style="font-size:14px;font-weight:bold;text-align:right;line-height:18px;padding:0 0 10px 10px;vertical-align:top;font-family:Arial,sans-serif"><strong>Grand Total:</strong></td> 
       <td style="font-size:14px;font-weight:bold;text-align:right;line-height:18px;padding:0 0 10px 10px;vertical-align:top;font-family:Arial,sans-serif"><strong><%= vnd(@order['total']) %></strong></td> 
      </tr> 
      <tr> 
       <td style="text-align:right;line-height:18px;padding:0 0 10px 10px;vertical-align:top;font-size:13px;font-family:Arial,sans-serif"> </td> 
      </tr> 
     </tbody>
    </table> </td> 
  </tr> 
 </tbody>
</table>